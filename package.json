{
  "name": "opheliagame",
  "version": "0.1.0",
  "description": "opheliagame",
  "scripts": {
    "prebuild": "rimraf build && mkdir -p build/assets/css",
    "build": "run-s build:js build:app build:css",
    "build:css": "cross-env NODE_ENV=production npx tailwindcss -i src/assets/css/tailwind.css -c tailwind.config.js -o tmp/assets/css/style.css",
    "build:app": "cross-env NODE_ENV=production eleventy",
    "build:js": "rollup -i src/assets/js/main.mjs -o build/assets/js/main.mjs -f es -p \"terser={mangle: { keep_fnames: true, toplevel: true, module: true }}\" -p \"filesize={}\"",
    "lint": "standard \"src/**/*.mjs\"",
    "predev": "rimraf tmp && mkdir -p tmp/assets/css",
    "dev": "npm run watch:app & npm run watch:css",
    "test": "ava test/**/*.spec.mjs",
    "watch:app": "cross-env NODE_ENV=development eleventy --serve",
    "watch:css": "cross-env NODE_ENV=development npx tailwindcss -i src/assets/css/tailwind.css -c tailwind.config.js -o tmp/assets/css/style.css --watch"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "0.12.1",
    "@11ty/eleventy-img": "^1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@ficusjs/renderers": "3.1.0",
    "@ficusjs/testing": "1.0.1",
    "@toycode/markdown-it-class": "^1.2.4",
    "autoprefixer": "^10.4.0",
    "ava": "3.15.0",
    "clean-css": "5.1.2",
    "cross-env": "7.0.3",
    "dotenv": "^10.0.0",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "ficusjs": "3.3.0",
    "html-minifier": "4.0.0",
    "markdown-it-link-attributes": "^4.0.0",
    "npm-run-all": "4.1.5",
    "octonode": "^0.10.2",
    "paper": "^0.12.15",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "rimraf": "3.0.2",
    "rollup": "2.46.0",
    "rollup-plugin-filesize": "9.1.1",
    "rollup-plugin-minify-html-literals": "1.2.6",
    "rollup-plugin-terser": "7.0.2",
    "standard": "16.0.3",
    "stylelint": "13.13.0",
    "stylelint-config-standard": "22.0.0",
    "tailwindcss": "^3.0.7"
  }
}
