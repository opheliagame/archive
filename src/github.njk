---
layout: base
pagination:
  data: repos
  size: 20

---

{% block content %}
{% for item in pagination.items %}
  {{ item | log }}

  {% if loop.first %}
    <ul class="list-inside">
  {% endif %}

  <li>
    <div class="py-2">
      <a href={{item.html_url}} >
        <h3 class="text-sm font-semibold">
          <span class="link-primary">{{ item.name }}</span> 
        </h3>
      </a>
      <p class="text-xs"> {{ item.description }} </p>
      <div class="text-xs">
        {% for lang in item.languages %}
          {% if loop.first %}<ul class="flex">{% endif %}
          <li class="px-1 rounded-full border border-green-300">{{ lang }}</li>
          {% if loop.last %}</ul>{% endif %}
        {% endfor %}
      </div>
    </div>
  </li>

  {% if loop.last %}
    </ul>
  {% endif %}
{% endfor %}
{% endblock %}
