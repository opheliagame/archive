
{% block list %}
  {% set title = title.split('') %}
  <div class="text-lg md:text-xl uppercase flex flex-row justify-between md:justify-end"> 
    {% for letter in title %}
      <p class=md:pl-{{(loop.length-loop.index+1)*4}}>
        <span> {{ letter }} </span>
      </p>
    {% endfor %}  
  </div>
  
  <ul class="md:grid md:grid-cols-3 md:grid-flow-row md:gap-4">
    {% for item in listitems %}

    <li>
      <div class="py-2">
        {% if openLinkInNewTab %}
        <a href={{item.url}} target="_blank">
        {% else %}
        <a href={{item.url}} >
        {% endif %}
          <h3 class="text-sm md:text-xl font-semibold pb-1">
            <span class="link-primary">{{ item.data.title }}</span> 
          </h3>
        </a>
        <p class="text-xs md:text-lg"> {{ item.data.description }} </p>
        <div class="flex flex-row flex-wrap">
          {% for tag in item.data.tags %}
            <main-tag name={{tag}}></main-tag>
          {% endfor %}
        </div>
      </div>
    </li>
    {% endfor %}
  </ul> 


{% endblock %}
